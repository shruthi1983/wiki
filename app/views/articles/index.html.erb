<p id="notice"><%= notice %></p>
<% if request.original_url.split( '=').last.include? '/' %>
<h1> All Articles</h1>
<% else %>
<h1> All <%=@category%> Articles </h1>
<%end%>
     <% @articles.each do |article| %>
 <h1><%= link_to article.title, article %></h1>
 <p><%= truncate(article.body,length:200) %></p>
     <% end %>
